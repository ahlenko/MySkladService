<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <!-- Анімація для зміни заокруглених кутів -->
            <objectAnimator
                android:propertyName="cornerRadius"
                android:valueTo="50dp"
                android:valueType="floatType"
                android:duration="100"
                />
            <!-- Анімація для зміни альфа-каналу (прозорості) -->
            <objectAnimator
                android:propertyName="alpha"
                android:valueTo="0.5"
                android:valueType="floatType"
                android:duration="100"
                />
            <objectAnimator
                android:propertyName="scaleX"
                android:valueTo="0.9"
                android:valueType="floatType"
                android:duration="100"
                />
            <objectAnimator
                android:propertyName="scaleY"
                android:valueTo="0.9"
                android:valueType="floatType"
                android:duration="100"
                />
        </set>
    </item>
    <!-- Стандартний стан (не натиснуто) -->
    <item>
        <set>
            <!-- Анімація для зміни заокруглених кутів назад до початкового значення -->
            <objectAnimator
                android:propertyName="cornerRadius"
                android:valueTo="0dp"
                android:valueType="floatType"
                android:duration="100"
                />
            <!-- Анімація для зміни альфа-каналу (прозорості) назад до початкового значення -->
            <objectAnimator
                android:propertyName="alpha"
                android:valueTo="1"
                android:valueType="floatType"
                android:duration="100"
                />
            <objectAnimator
                android:propertyName="scaleX"
                android:valueTo="1.0"
                android:valueType="floatType"
                android:duration="100"
                />
            <objectAnimator
                android:propertyName="scaleY"
                android:valueTo="1.0"
                android:valueType="floatType"
                android:duration="100"
                />
        </set>
    </item>
</selector>